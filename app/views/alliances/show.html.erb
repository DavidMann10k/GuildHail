<% title "Alliance" %>

<%= content_tag :h1, @alliance.name %>
<%= content_tag :h2, "Founded On" %>
<%= content_tag :p, "#{@alliance.created_at.strftime('%B %d, %Y')}" %>

<%= content_tag :h2, "Members" %>
<ul>
	<% @members.each do |m| %>
		<li><%= link_to m.name, user_path(m) %></li>
	<% end %>
</ul>

<p>
  <%= link_to "Edit", edit_alliance_path(@alliance) %> |
  <%= link_to "Destroy", @alliance, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", alliances_path %>
</p>
