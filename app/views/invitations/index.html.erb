<% title "Invitations" %>
<% unless @invitations_sent.empty? %>
	<%= content_tag :h2, "Invitations Sent"%>
 	<% @invitations_sent.each do |is| %>
		<%= render :partial => "invite", :locals => { :i => is } %>
	<% end %>
<% end %>
<% unless @invitations_recieved.empty? %>
	<%= content_tag :h2, "Invitations Recieved"%>
	<% @invitations_recieved.each do |ir| %>
		<%= render :partial => "invite", :locals => { :i => ir } %>
		<% end %>
<% end %>