<% title "Invitations" %>

<%= content_tag :h2, "Invitations Sent"%>
<% @invitations_sent.each do |is| %>
	<%= is.sender.name %> => <%= is.recipient.name %>, <br />
	"<%= is.message %>"
<% end %>
<%= content_tag :h2, "Invitations Recieved"%>
<% @invitations_recieved.each do |ir| %>
	<%= ir.sender.name %> => <%= ir.recipient.name %>, <%= link_to "Accept", { :controller => "memberships", :action => "new", :invitation_id => ir.id } %><br />
	"<%= ir.message %>"
<% end %>
